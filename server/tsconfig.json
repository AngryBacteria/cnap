{
    "compilerOptions": {
      "target": "ES2024",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "esModuleInterop": true,
      "strict": true,
      "outDir": "dist",
      "sourceMap": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "removeComments": true,
      "baseUrl": ".",

      // Fix for type character exceeding limit
      "declaration": false
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
  }
  