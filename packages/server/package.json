{
  "name": "server",
  "version": "1.0.0",
  "description": "The server code for the cnap.ch website",
  "type": "module",
  "main": "dist/trcp/routers/_app.js",
  "scripts": {
    "dev": "tsx watch src/trcp/routers/_app.ts | pino-pretty",
    "biome": "biome check --write ./src/",
    "type-check": "tsc --noEmit",
    "test": "vitest --test-timeout=15000 --run",
    "test:coverage": "vitest run --coverage --test-timeout=15000 --run",
    "build": "tsc",
    "start": "node dist/trcp/routers/_app.js",
    "db:push": "set NODE_OPTIONS=--import tsx && drizzle-kit push",
    "cleanup": "rimraf dist && rimraf node_modules"
  },
  "dependencies": {
    "@trpc/client": "11.5.1",
    "@trpc/server": "11.5.1",
    "cors": "2.8.5",
    "dotenv": "17.2.2",
    "express": "4.21.2",
    "limiter": "3.0.0",
    "pino": "9.11.0",
    "zod": "4.1.9",
    "drizzle-orm": "0.44.5",
    "pg": "8.16.3"
  },
  "devDependencies": {
    "@types/cors": "2.8.19",
    "@types/express": "5.0.3",
    "@types/node": "24.5.2",
    "@vitest/coverage-v8": "3.2.4",
    "nodemon": "3.1.10",
    "pino-pretty": "13.1.1",
    "tsx": "4.20.5",
    "vitest": "3.2.4",
    "@types/pg": "8.15.5",
    "drizzle-kit": "0.31.4"
  }
}
