{
  "name": "server",
  "version": "1.0.0",
  "description": "The server code for the cnap.ch website",
  "type": "module",
  "main": "dist/trcp/routers/_app.js",
  "scripts": {
    "dev": "tsx watch src/trcp/routers/_app.ts | pino-pretty",
    "type-check": "tsc --noEmit",
    "test": "vitest run --coverage",
    "build": "tsc",
    "start": "node dist/trcp/routers/_app.js",
    "db:push": "tsx node_modules/drizzle-kit/bin.cjs push --verbose --strict",
    "cleanup": "rimraf dist && rimraf node_modules"
  },
  "dependencies": {
    "@trpc/client": "11.8.0",
    "@trpc/server": "11.8.0",
    "cors": "2.8.5",
    "dotenv": "17.2.3",
    "drizzle-orm": "1.0.0-beta.3-702eadc",
    "drizzle-zod": "0.8.3",
    "express": "4.22.1",
    "limiter": "3.0.0",
    "pg": "8.16.3",
    "pino": "10.1.0",
    "superjson": "2.2.6",
    "zod": "4.2.1"
  },
  "devDependencies": {
    "@types/cors": "2.8.19",
    "@types/express": "4.17.24",
    "@types/node": "25.0.3",
    "@types/pg": "8.16.0",
    "@vitest/coverage-v8": "4.0.16",
    "babel-plugin-react-compiler": "19.1.0-rc.3",
    "drizzle-kit": "1.0.0-beta.3-702eadc",
    "pino-pretty": "13.1.3",
    "vitest": "4.0.16"
  }
}
