{
  "name": "server",
  "version": "1.0.0",
  "description": "The server code for the cnap.ch website",
  "type": "module",
  "main": "dist/trcp/routers/_app.js",
  "scripts": {
    "dev": "tsx watch src/trcp/routers/_app.ts | pino-pretty",
    "biome": "biome check --write ./src/",
    "type-check": "tsc --noEmit",
    "test": "vitest --test-timeout=15000 --run",
    "test:coverage": "vitest run --coverage --test-timeout=15000 --run",
    "build": "tsc",
    "start": "node dist/trcp/routers/_app.js",
    "db:push": "set NODE_OPTIONS=--import tsx && drizzle-kit push"
  },
  "dependencies": {
    "@trpc/client": "11.3.1",
    "@trpc/server": "11.3.1",
    "cors": "2.8.5",
    "dotenv": "16.5.0",
    "express": "4.21.2",
    "limiter": "3.0.0",
    "pino": "9.7.0",
    "zod": "3.25.55"
  },
  "devDependencies": {
    "@types/cors": "2.8.19",
    "@types/express": "4.17.21",
    "@types/node": "22.15.30",
    "@vitest/coverage-v8": "3.2.2",
    "nodemon": "3.1.10",
    "pino-pretty": "13.0.0",
    "tsx": "4.19.4",
    "typescript": "5.8.3",
    "vitest": "3.2.2"
  }
}
